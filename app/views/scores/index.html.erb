<div class="page-header">
  <h1>Wertungen</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Teilnehmer</th>
        <th>Wertungsrichter</th>
        <th>Wertung</th>
        <th>Datum/Uhrzeit</th>
      </tr>
    </thead>
    
    <tbody>
      <%= content_tag_for(:tr, @scores) do |score| %>
        <td><%= score.contestant %></td>
        <td><%= score.judge %></td>
        <td style="text-align: right;"><%= score.value %></td>
        <td><%= score.created_at %></td>
      <% end %>
    </tbody>
  </table>
</div>
