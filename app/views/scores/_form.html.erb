<%= form_for( [ @contestant, @score ], html: { class: "form-horizontal", role: "form" } ) do |f| %>
  <% if @score.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h4>

      <ul>
      <% @score.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :contestant, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @contestant %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :judge, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :judge_id, Judge.all, :id, :name, {},  { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :value, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
